{
  "layer": "top",
  "position": "top",
  "modules-left": [
    "custom/logo",
    "hyprland/workspaces",
    "hyprland/window",
  ], 
  "modules-center": [
    "clock",
  ],
  "modules-right": [
    "group/blight",
    "memory",
    "cpu",
    "idle_inhibitor",
    "custom/clipboard",
    "bluetooth",
    "group/audio",
    "group/networking",
    "battery"
  ],
  "reload_style_on_change": true,

  "custom/logo": {
    "format": "<span font='20px'> Ôáë </span>",
    "tooltip": false,
    "on-click": "rofi -show power-menu -modi power-menu:rofi-power-menu"
    "on-click-right": "hyprlock",
  },

  "clock": {
    "format": "{:%I:%M %p}",
    "tooltip": true,
    "tooltip-format": "<small>{:%D}</small>",
    "calendar-weeks-pos": "right",
  },

  "memory": {
    "format": "Óâ¶ {percentage}%"
  },

  "cpu": {
    "interval": 1,
    "format": "Ó∫ú {usage}%",
  },

  "hyprland/workspaces": {
    "format": "<span font='18px'>{icon}</span>",
    "format-icons": {
      "1": "Ó¨Å",
      "2": "Óûï",
      "3": "ÔÑ° ",
      "4": "Û±ùø",
      "5": "Ôìø",
    },
    "persistent-workspaces": {
      "*": [
        1,
        2,
        3,
        4,
        5,
      ]
    }
  },

  "hyprland/window": {
    "format": "( {class} )",
  },

  "custom/clipboard": {
    "format": "<span font='11'>Ôáπ </span>",
    "tooltip": false,
    "on-click": "clipman pick -t rofi --err-on-no-selection"
  },

  "group/blight": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false
    },
    "modules": [
      "backlight",
      "backlight/slider"
    ]
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "<span font='12'>{icon}</span>",
    "format-icons": [
      "Óèï ",
      "Óèñ ",
      "Óèó ",
      "Óèò ",
      "Óèö ",
      "Óèõ ",
      "Óèú ",
      "Óèù ",
      "Óèû ",
      "Óèü ",
    ],
    "on-scroll-down": "light -U 10",
    "on-scroll-up": "light -A 10",
    "smooth-scrolling-threshold": 1
  },
  "backlight/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal",
    "device": "intel_backlight"
  },

  "idle_inhibitor": {
    "format": "<span font='12'>{icon}</span>",
    "format-icons": {
      "activated": "Û∞Ö∂ ",
      "deactivated": "Û∞æ™ ",
    }
  },

  "bluetooth": {
    "format-on": "<span font='12'>Û∞Ç∞ </span>",
    "format-off": "<span font='12'>Û∞Ç≤ </span>",
    "format-disabled": "<span font='12'>Û∞Ç≤ </span>",
    "format-connected": "<span font='12'>Û∞Ç¥ </span>",
    "format-connected-battery": "{device_battery_percentage}% Û∞Ç¥",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "sh ~/.config/rofi/scripts/bluetooth",
  },

  "pulseaudio": {
    "format": "<span font='11'>{icon}</span>",
    "format-bluetooth": "Û∞Ç∞ ",
    "format-muted": "Ôë¶ ",
    "tooltip-format": "{volume}% {icon}",
    "format-icons": {
      "headphones": "ÔÄ• ",
      "bluetooth": "Û∞•∞ ",
      "handsfree": "ÔÄ• ",
      "headset": "Û±°¨ ",
      "phone": "ÔÇï ",
      "portable": "ÔÇï ",
      "car": "ÔÜπ ",
      "default": [
        "Û∞¥∏ ",
        "Û∞¥∏ ",
        "Û∞¥∏ "
      ]
    },
    "scroll-step": 5,
    "justify": "center",
    "on-click": "amixer sset Master toggle",
    "on-click-right": "pavucontrol",
    "tooltip-format": "{volume}%  {icon}",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
  },
  "pulseaudio#mic": {
    "format": "{format_source}",
    "format-source": "Ó∞ú ",
    "format-source-muted": "ÔÑ± ",
    "tooltip-format": "{volume}% {format_source} ",
    "on-click": "pactl set-source-mute 0 toggle",
    "on-scroll-down": "pactl set-source-volume 0 -1%",
    "on-scroll-up": "pactl set-source-volume 0 +1%"
  },
  "group/audio": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false
    },
    "modules": [
      "pulseaudio",
      "pulseaudio#mic",
      "pulseaudio/slider"
    ]
  },
  "pulseaudio/slider": {
    "min": 0,
    "max": 140,
    "orientation": "horizontal"
  },

  "network": {
    "format-wifi": "<span font='11'>Ôá´ </span>",
    "format-ethernet": "<span font='11'>Û∞àÄ </span>",
    "format-disconnected": "<span font='11'>Û±êÖ </span>",
    "tooltip-format-disconnected": "Disconnected",
    "tooltip-format": "{ipaddr}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´ | {ipaddr}",
    "tooltip-format-ethernet": "{ifname} üñß | {ipaddr}",
    "tooltip-format-ethernet": "{bandwidthTotalBytes}",
    "on-click": "sh ~/.config/rofi/scripts/wifi"
  },
  "network#speed": {
    "format": "{bandwidthDownBits}",
    "interval": 1,
    "tooltip-format": "{ipaddr}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´  \n{ipaddr} | {frequency} MHz{icon} ",
    "tooltip-format-ethernet": "{ifname} Û∞àÄ \n{ipaddr} | {frequency} MHz{icon} ",
    "tooltip-format-disconnected": "Not Connected to any type of Network",
    "tooltip": true,
  },
  "group/networking": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false
    },
    "modules": [
      "network",
      "network#speed"
    ]
  },

  "battery": {
    "interval": 1,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20
    },
    "tooltip": true,
    "format": " {capacity}% <span font='16px'>{icon}</span>",
    "format-time": "{H}h {M}min",
    "tooltip": "{time}",
    "format-charging": " {capacity}% <span font='16px'>{icon}</span>",
    "format-plugged": " {capacity}% Û∞†† ",
    "format-icons": [
      "Û∞™û ",
      "Û∞™ü ",
      "Û∞™† ",
      "Û∞™° ",
      "Û∞™¢ ",
      "Û∞™£ ",
      "Û∞™§ ",
      "Û∞™• "
    ],
  },

}
